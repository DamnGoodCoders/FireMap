<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".QR">

    <Button
            android:layout_width="174dp"
            android:layout_height="70dp"
            android:title="Process Image"
            android:contentDescription="Button for Processing Image"
            android:id="@+id/qrbuttonprocess"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:text="Process Image"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="58dp"
            app:layout_constraintTop_toBottomOf="@+id/qrtxtContent"/>
    <TextView android:text=""
              android:layout_width="310dp"
              android:layout_height="77dp"
              android:id="@+id/qrtxtContent"
              app:layout_constraintEnd_toEndOf="parent"
              android:layout_marginEnd="32dp" app:layout_constraintStart_toStartOf="parent"
              android:layout_marginStart="8dp" android:layout_marginTop="128dp"
              app:layout_constraintTop_toBottomOf="@+id/qrImageView" app:layout_constraintHorizontal_bias="0.688"/>
    <ImageView
            android:layout_width="274dp"
            android:layout_height="238dp" app:srcCompat="@android:drawable/gallery_thumb"
            android:id="@+id/qrImageView"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="152dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.495"/>
    <Button
            android:text="Take Picture"
            android:layout_width="164dp"
            android:layout_height="68dp"
            android:id="@+id/qrbuttoncamera"
            android:layout_marginTop="52dp"
            app:layout_constraintTop_toBottomOf="@+id/qrtxtContent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
</android.support.constraint.ConstraintLayout>