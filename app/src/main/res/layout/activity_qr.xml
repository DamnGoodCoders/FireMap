<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".QR">

    <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            app:theme="@style/ThemeOverlay.AppCompat.Light"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Dark"
            android:id="@+id/toolbar2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="0dp" app:layout_constraintHorizontal_bias="0.0"/>
    <Button
            android:layout_width="174dp"
            android:layout_height="70dp"
            android:title="Process Image"
            android:contentDescription="Button for Processing Image"
            android:id="@+id/qrbuttonprocess"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:text="@string/qrbuttonprocess"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/qrtxtContent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView android:text="@string/qrtxtContent"
              android:layout_width="310dp"
              android:layout_height="128dp"
              android:id="@+id/qrtxtContent"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.495"
              android:layout_marginTop="148dp" app:layout_constraintTop_toBottomOf="@+id/qrImageView"/>
    <Button
            android:layout_width="164dp"
            android:layout_height="68dp"
            android:id="@+id/qrbuttoncamera"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/qrtxtContent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:text="@string/qrbuttoncamera"/>
    <ImageView
            android:layout_width="307dp"
            android:layout_height="255dp" app:srcCompat="@android:color/background_light"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/qrImageView"
            app:layout_constraintHorizontal_bias="0.48" android:visibility="visible" android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/toolbar2"/>
</android.support.constraint.ConstraintLayout>